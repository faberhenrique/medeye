    <div class="container-fluid">
        <input class="form-control form-control-lg" type="text" placeholder="Digite o nome do usuÃ¡rio:">
        <ul class="list-group">
            <% users.forEach(function(customer){ %>
                <li class="list-group-item">

                    <span class="name">
    					<span class="info">
    						Name:
    					</span>
                        <%= customer.name %>
                    </span>
