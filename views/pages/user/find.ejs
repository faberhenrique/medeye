<% include ../../templates/header.ejs %>
    <div class="container-fluid">
        <ul class="list-group">
            <% user.forEach(function(data){ %>
                <li class="list-group-item">
                    <span class="name">
    					<span class="info">
    						Name:
    					</span>
                        <%= data.name %>
                    </span>
                    <span class="user-name">
    					<span class="info">
    						Usuário:
    					</span>
                        <%= data.user %>
                    </span>
                    <span class="user-name">
    					<span class="info">
    						Usuário:
    					</span>
                        <%= data.email %>
                    </span>
                    <span class="name">
    					<span class="info">
    						CPF:
    					</span>
                        <%= data.cpf %>
                    </span>
                    <span class="name">
    					<span class="info">
    						Telefone:
    					</span>
                        <%= data.tel %>
                    </span>
                    <span class="name">
    					<span class="info">
    						Data de cadastro:
    					</span>
                        <%= data.date %>
                    </span>
                    <a class="link-edit" href="/edit/<%= user._id %>">
                        <i class="fa fa-edit"></i> Edit
                    </a>
                    <a class="link-delete" href="/user/<%= user._id %>/delete" onclick="return confirm('Tem certeza que deseja excluir? / Are you sure you want to delete?');">
                        <i class="fa fa-close"></i> Delete
			        </a>
                </li>
            <% }) %>
        </ul>
    </div>
<% include ../../templates/footer.ejs %>
